                            <h3>Bạn có chắc chắn muốn xóa bản ghi này không?</h3>
                            <div>
                                <hr />
                                <table class="table">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th style="width:200px;">Thuộc Tính </th>
                                            <th>Nội Dung </th>

                                            <th>&nbsp;</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                        <tr class="alert" role="alert">
                                            <th scope="row">Sách</th>
                                            <td>@Html.DisplayFor(model => model.Sach.TenSach)</td>
                                        </tr>
                                        <tr class="alert" role="alert">
                                            <th scope="row">Thể Lo</th>
                                            <td>@Html.DisplayFor(model => model.TheLoai.TenTheLoai)</td>
                                        </tr>
                                        }
                                        
                                    </tbody>
                                </table>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                    <input type="submit" value="Delete" style="background-color:#dfdfdf" class="btn btn-default" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
