@model BookStore.Models.NguoiDung
@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";

}
<div style="margin-top: 3%; padding: 0 20% 0 20%;">
    <a href="@Url.Action("DangNhap","NguoiDung")" style="float: left;" class=" btn btn-block py-3 rounded-0 btn-outline-dark font-weight-medium" data-link-group="idForm" data-animation-in="fadeIn">Đăng Nhập</a>
    <a href="@Url.Action("DangKy","NguoiDung")" style="float: left;" class="js-animation-link btn btn-block py-3 rounded-0 btn-outline-dark font-weight-medium" data-target="#signup" data-link-group="idForm" data-animation-in="fadeIn">Đăng Kí</a>
</div>

<form action="@Url.Action("DangKy", "NguoiDung")" method="post" style="margin-top:15%;">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div id="signup" style=" width:50%;margin:0 25% 0 25%;" data-target-group="idForm">

        <header class="border-bottom px-4 px-md-6 py-4">
            <h2 class="font-size-3 mb-0 d-flex align-items-center"><i class="flaticon-resume mr-3 font-size-5"></i>Tạo Tài Khoản</h2>
        </header>

        <div class="p-4 p-md-6">

            <div class="form-group mb-4">
                <div class="js-form-message js-focus-state">
                    <label id="signinEmailLabel1" class="form-label" for="signinEmail1">Họ và Tên *</label>
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    <input type="text" class="form-control rounded-0 height-4 px-4" name="HoTen" id="HoTen" placeholder="Nguyễn Văn A" aria-label="Nguyễn Văn A" aria-describedby="signinEmailLabel1" required>
                </div>
            </div>

            <div class="form-group mb-4">
                <div class="js-form-message js-focus-state">
                    <label id="signinEmailLabel1" class="form-label" for="signinEmail1">Email *</label>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    <input type="email" class="form-control rounded-0 height-4 px-4" name="Email" id="Email" placeholder="email_cua_ban@gmail.com" aria-label="email_cua_ban@gmail.com" aria-describedby="signinEmailLabel1" required>
                </div>
            </div>

            <div class="form-group mb-4">
                <div class="js-form-message js-focus-state">
                    <label id="signinEmailLabel1" class="form-label" for="signinEmail1">Số Điện Thoại *</label>
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    <input class="form-control rounded-0 height-4 px-4" name="SDT" id="SDT" placeholder="0123456789" aria-label="0123456789" aria-describedby="signinEmailLabel1" required>
                </div>
            </div>

            <div class="form-group mb-4">
                <div class="js-form-message js-focus-state">
                    <label id="signinEmailLabel1" class="form-label" for="signinEmail1">Tài Khoản *</label>
                    @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                    @if (ViewBag.thongbaotk != null && ViewBag.thongbaotk != "")
                    {
                        <span style="color:red">@ViewBag.thongbaotk</span>
                    }
                    <input class="form-control rounded-0 height-4 px-4" name="TaiKhoan" id="TaiKhoan" placeholder="" aria-label="" aria-describedby="signinEmailLabel1" required>

                </div>
            </div>

            <div class="form-group mb-4">
                <div class="js-form-message js-focus-state">
                    <label id="signinPasswordLabel1" class="form-label" for="signinPassword1">Mật Khẩu *</label>
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    <input type="password" class="form-control rounded-0 height-4 px-4" name="MatKhau" id="MatKhau" placeholder="" aria-label="" aria-describedby="signinPasswordLabel1" required>
                </div>
            </div>

            <div class="form-group mb-4">
                <div class="js-form-message js-focus-state">
                    <label id="signupConfirmPasswordLabel" class="form-label" for="signupConfirmPassword">Xác nhận Mật Khẩu *</label>
                    @if (ViewBag.thongbaomk != null && ViewBag.thongbaomk != "")
                    {
                        <span style="color:red">@ViewBag.thongbaomk</span>
                    }
                    <input type="password" class="form-control rounded-0 height-4 px-4" name="XacnhanMatKhau" id="XacnhanMatKhau" placeholder="" aria-label="" aria-describedby="signupConfirmPasswordLabel" required>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-block py-3 rounded-0 btn-dark">Tạo Tài Khoản</button>
            </div>
            <div class="text-center mb-4">
                <span class="small text-muted">Bạn đã có tài khoản?</span>
                <a class="small" href="@Url.Action("DangNhap","NguoiDung")" data-target="#login" data-link-group="idForm" data-animation-in="fadeIn">
                    Đăng Nhập
                </a>
            </div>
        </div>
    </div>
</form>

